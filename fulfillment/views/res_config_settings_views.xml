<odoo>
  <record id="view_bcplanning_config_settings" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.bcplanning</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="40"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">
        <app data-string="Fulfillment" string="Fulfillment" name="fulfillment">
          <block title="Default Operation Type" name="operation_type_block">
            <div class="o_setting_box">
              <group>
                <field name="fulfillment_default_operation_type_receipt_id"/>
              </group>
            </div>
            <div class="o_setting_box">
              <group>
                <field name="fulfillment_default_operation_type_pick_id"/>
              </group>
            </div>
            <div class="o_setting_box">
              <group>
                <field name="fulfillment_default_operation_type_oos_id"/>
              </group>
            </div>
          </block>
          <block title="Transporter Category" name="fulfillment_transporter">
            <div class="o_setting_box">
              <group>
                <field name="fulfillment_transporter_category_id"/>
              </group>
            </div>
            <div class="o_setting_box">
              <group>
                <button name="action_refresh_courier_scoring"
                        type="object"
                        string="Refresh"
                        class="btn btn-primary o_form_button_refresh"/>
              </group>
            </div>
            <div class="o_setting_box">
              <group string="Courier classification">
                <field name="fulfillment_courier_threshold_reguler"/>
                <field name="fulfillment_courier_threshold_medium"/>
                <field name="fulfillment_courier_label_reguler"/>
                <field name="fulfillment_courier_label_medium"/>
                <field name="fulfillment_courier_label_priority"/>
              </group>
              <group string="Cut-off time for Priority Picking">
                <field name="fulfillment_priority_cutoff_time" widget="float_time"/>
                <!-- NEW: Manual run button to trigger reset_priority_pickings_based_on_cutoff -->
                <div class="o_setting_box">
                  <group>
                    <button name="action_run_reset_priority_pickings"
                            type="object"
                            string="Run manually"
                            class="btn btn-primary"/>
                  </group>
                </div>
              </group>
            </div>
          </block>
        </app>
      </xpath>
    </field>
  </record>
</odoo>