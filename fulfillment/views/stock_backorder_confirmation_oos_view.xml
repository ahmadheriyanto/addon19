<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Inherit the core stock.backorder.confirmation view and add an OOS button.
       The button is invisible by default and becomes visible when the transient
       has show_oos = True (populated via action context default_show_oos).
       This keeps the change minimal and controlled via context.
  -->
  <record id="view_backorder_confirmation_oos" model="ir.ui.view">
    <field name="name">stock.view_backorder_confirmation.inherit.fulfillment.oos</field>
    <field name="model">stock.backorder.confirmation</field>
    <field name="inherit_id" ref="stock.view_backorder_confirmation"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='process_cancel_backorder']" position="after">
        <field name="show_oos" invisible="1"/>
        <button name="action_process_oos" type="object" string="OOS" invisible="show_oos == False"/>
      </xpath>
    </field>
  </record>
</odoo>